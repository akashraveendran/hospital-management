<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #0cebeb, #20e3b2, #29ffc6);
    }
</style>

<div class="login-page" style="width: 70vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Add New Department</h2>
        </div>
        <form class="login-form" action="/hospital/add-department" method="post" enctype="multipart/form-data">
            <input type="text" name="department" placeholder="Department Name" required />
            <input type="text" name="shortName" placeholder="Short Name for Department" required />
            <textarea name="description" placeholder="Short description about clinic" id="" cols="10" rows="5"
                required></textarea>
            <button type="submit" style="background: #00ffaa;">Add </button>
            <a href="/hospital" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>