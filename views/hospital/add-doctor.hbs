<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #0cebeb, #20e3b2, #29ffc6);
    }
</style>

<div class="login-page" style="width: 70vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Add New Doctor</h2>
        </div>
        <form class="login-form" action="/hospital/add-new-doctor" method="post" enctype="multipart/form-data">
            <input type="text" name="doctorName" placeholder="Name of the Doctor" required />
            <input type="number" name="phone" placeholder="Phone Number" required />
            <input type="email" name="email" placeholder="Email" required />
            <div class="d-flex flex-row">

                <label for="" class="me-3 align-self-center mb-3">Department</label>
                <select name="department" id="" required>
                    <option value=""></option>
                    {{#each departments}}
                    <option value={{department}}>{{department}}</option>
                    {{/each}}
                </select>
            </div>
            <input type="text" name="specialisation" placeholder="Specialisation" required />
            <textarea name="address" placeholder="Address" id="" cols="10" rows="5" required></textarea>
            <textarea name="bio" placeholder="Short description about the doctor" id="" cols="10" rows="5"
                required></textarea>
            <div class="d-flex flex-row">

                <label for="">Upload Doctor's Image</label>
                <input type="file" accept="" name="image" required>
            </div>
            <button type="submit" style="background: #00ffaa;">submit details </button>
            <a href="/hospital/view-all-doctors" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>