        background-size: cover;
        opacity: .7
    }

    .card3 {
        transition: all .25s ease-in-out;
        background: url('/images/appoinment-image.jpg');
        background-size: cover;
        opacity: .7
    }

    .card1:hover,
    .card2:hover,
    .card3:hover {
        transform: scale(1.1);
        background: #bbf7f7;
        cursor: pointer;
        opacity: 1;
    }
