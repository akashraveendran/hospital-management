    <div class="container d-flex flex-column justify-content-space-around" style="height: 100vh;">
        <h2 class="title mt-5 mb-5 hospital-header" style="text-align: center;">
            Profile Details
        </h2>
        <div class="card p-5">
            <div class="container">
                <h4 class="profile-header"><span class="profile-small-text">Name </span>{{hospital.hospitalName}}
                </h4>
                <hr>
                <h6 class="profile-header"><span class="profile-small-text">Email </span>{{hospital.email}} </h6>
                <hr>
                <h6 class="profile-header"><span class="profile-small-text">Phone </span>{{hospital.phone}} </h6>
                <hr>
                <h6 class="profile-header"><span class="profile-small-text">Place </span>{{hospital.place}} </h6>
                <hr>
                <h6 class="profile-header"><span class="profile-small-text">Description </span>{{hospital.description}}
                </h6>
                <hr>

            </div>
        </div>

    </div>
</section>
