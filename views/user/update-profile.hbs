<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #d3d3e4, #888888);
    }
</style>

<div class="login-page" style="width: 70vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Update Your Details</h2>
        </div>
        <form class="login-form" action="/update-profile" method="post" enctype="multipart/form-data">
            <input type="text" name="userName" value="{{user.userName}}" placeholder="Enter User Name" required />
            <input type="number" name="age" value={{user.age}} placeholder="Age (in years)" required />
            <textarea name="address" placeholder="Address" id="" cols="10" rows="5"
                required>{{user.address}} </textarea>
            <input type="number" name="phone" value={{user.phone}} placeholder="Phone No" required />
            <input type="email" name="email" value={{user.email}} placeholder="Email Id" required />
            <label for="">Upload New Image</label>
            <input type="file" accept="" name="image">
            <button type="submit" style="background: #237A57;">SUBMIT</button>
            <a href="/" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>