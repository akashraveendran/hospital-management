<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: #fff;
    }

    .card {
        background-color: rgba(209, 255, 245, 0.45);
        backdrop-filter: blur(5px);
    }

    .card2 {
        background-color: rgb(241, 212, 255);
        backdrop-filter: blur(5px);
    }

    .card:hover {
        transform: scale(1.01);
    }

    .navbar {
        background: linear-gradient(90deg, #d3d3e4, #888888);
    }

    a {
        text-decoration: none;
        transition: all .25s;

    }

    .navbar .text-light:hover {
        background: rgb(255, 54, 54);
        border-radius: 10px;
    }

    .ms-3 {
        font-size: 23px;
    }
</style>

<nav class="navbar navbar-light bg-light mb-5 d-flex justify-content-space-between">
    <h1 class="ms-3">Messages</h1>
    <a class="text-light me-5 p-2" href="/" style="text-decoration: none;">Back</a>
</nav>

<div class="container library">
    <h2 class="mt-3">New Notifications</h2>
    <div class="row justify-content-end mb-5">
        <div class="col-3 d-flex justify-content-end">
            <a href="/send-message" class="btn btn-success p-3 text-light">Send Message to Admin</a>
        </div>
    </div>
    <div class="row">
        {{#if inbox}}
        {{#each inbox}}
        <div class="col-12  card m-3">
            <div class="p-1">
                <div class="container">
                    <h6>From : <b>{{from}}</b> </h6>
                    <h6> Message : <b>{{message}} </b></h6>
                    <h6>Date: <b>{{date}}</b> </h6>
                    <h6>Time <b>{{time}}</b> </h6>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <center>
            <h1 style="color:white; transform:scale(1.2);transition:all 0.5s ease;">No Notifications Found !!!!</h1>
        </center>
        {{/if}}
    </div>
</div>
<hr>
<div class="container library">
    <h2 class="mt-5">Sent Messages</h2>
    <div class="row">
        {{#if outbox}}
        {{#each outbox}}
        <div class="col-12  card2 m-3">
            <div class="p-1">
                <div class="container">
                    <h6>To : <b>{{to}} </b></h6>
                    <h6> Message : <b>{{message}} </b></h6>
                    <h6>Date: <b>{{date}}</b> </h6>
                    <h6>Time <b>{{time}}</b> </h6>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <center>
            <h1 style="color:white; transform:scale(1.2);transition:all 0.5s ease;">No Messages Found !!!!</h1>
        </center>
        {{/if}}
    </div>
</div>