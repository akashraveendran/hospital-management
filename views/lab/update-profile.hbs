<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #093028, #237A57);
    }
</style>

<div class="login-page" style="width: 70vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Laboratory Signup</h2>
        </div>
        <form class="login-form" action="/lab/update-profile" method="post" enctype="multipart/form-data">
            <input type="text" name="labName" value={{lab.labName}} placeholder="Enter laboratory's Name" required />
            <textarea name="description" placeholder="Short description about laboratory" id="" cols="10" rows="5"
                required>{{lab.description}}</textarea>
            <textarea name="address" placeholder="Address" id="" cols="10" rows="5" required>{{lab.address}}</textarea>
            <input type="number" name="phone" value={{lab.phone}} placeholder="Phone No" required />
            <input type="email" name="email" value={{lab.email}} placeholder="Email Id" required />
            <label for="">Upload Image</label>
            <input type="file" accept="" name="image">
            <label for="">Timings </label>
            <div class="d-flex">
                <label for="">Opening Time</label>
                <input type="time" name="openingTime" id="" value={{lab.openingTime}} required>
            </div>
            <div class="d-flex">
                <label for="">Closing Time</label>
                <input type="time" name="closingTime" id="" value={{lab.closingTime}} required>
            </div>
            <button type="submit" style="background: #237A57;">SUBMIT</button>
            <a href="/lab" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>