<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: #fff;
    }

    .card {
        background: linear-gradient(90deg, #093028, #237A57);
        backdrop-filter: blur(5px);
        color: white
    }

    .navbar {
        background: linear-gradient(90deg, #093028, #237A57);
    }

    a {
        text-decoration: none;
    }
</style>

<nav class="navbar navbar-light text-light mb-5 d-flex justify-content-space-between">
    <h1 class="ms-3">Clinics</h1>
    <a class="btn btn-danger me-5 p-2 text-light" href="/lab" style="text-decoration: none;">Back</a>
</nav>

<div class="container library">

    <div class="row">
        {{#if clinics}}
        {{#each clinics}}
        <div class="col-4">
            <div class="card p-1 m-3">
                <img src="/images/clinic/{{_id}}.jpg" class="image">
                <div class="container">
                    <h4><b>{{doctorName}}</b></h4>
                    <h6 class="text-primary">Email {{email}} </h6>
                    <h6 class="text-danger">Phone {{phone}} </h6>
                    <h6>Bio : {{description}} </h6>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <center>
            <h1 style="color:white; transform:scale(1.2);transition:all 0.5s ease;">No clinics Found !!!!</h1>
        </center>
        {{/if}}
    </div>
</div>