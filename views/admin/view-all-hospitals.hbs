<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #bdc3c7, #2c3e50);
    }

    .form {
        width: 100%
    }
</style>

<div class="login-page" style="width: 80vw">
    <div class="form">
        <div style="display: flex;justify-content: space-between;margin-bottom:15px">
            <a href="/admin"><button style="background: rgb(206, 16, 16);"> Back</button></a>
            <h2 class="title" style="color: #2c3e50;"> Hosapitals List</h2>
            <a href="/admin/add-hospital"><button style="background: rgb(29, 173, 60);"> Add New Hospital</button></a>
        </div>
        {{#if hospitals}}
        <table id="main_table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Place</th>
                    <th>Doctors</th>
                    <th>Departments</th>
                    <th>operations</th>
                </tr>
            </thead>
            <tbody>
                {{#each hospitals}}
                <tr>
                    <td>{{hospitalName}}</td>
                    <td>{{email}}</td>
                    <td>{{place}}</td>
                    <td>{{total_doctors}}</td>
                    <td>{{total_dept}}</td>
                    <td><a href="/admin/delete-user/{{_id}}"
                            onclick="return confirm('Are you sure you want to delete this hospital?');"><button
                                class="btn" style="background: red;font-weight:600;">delete</button></a>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <center>
            <h1 class="mt-5">There Are No Hospitals added !!!</h1>
        </center>
        {{/if}}
    </div>
</div>
<script>
    $(function () {
        $("#main_table").dataTable();
    });
</script>