<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #bdc3c7, #2c3e50);
    }
</style>

<div class="login-page" style="width: 70vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Add New clinic</h2>
        </div>
        <form class="login-form" action="/admin/add-clinic" method="post" enctype="multipart/form-data">
            <input type="text" name="doctorName" placeholder="Enter Doctor's Name" required />
            <textarea name="description" placeholder="Short description about clinic" id="" cols="10" rows="5"
                required></textarea>
            <input type="text" name="place" placeholder="place" required />
            <input type="number" name="phone" placeholder="Phone No" required />
            <input type="email" name="email" placeholder="Email Id" required />
            <input type="password" name="password" placeholder="Password" required />
            <label for="">Upload clinic Image</label>
            <input type="file" accept="" name="image" required>
            <label for="">Timings </label>
            <input type="time" name="openingTime" placeholder="Opening Time" id="" required>
            <input type="time" name="closingTime" placeholder="Closing Time" id="" required>

            <button type="submit" style="background: #00c3ff;">SUBMIT</button>
            <a href="/admin" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>