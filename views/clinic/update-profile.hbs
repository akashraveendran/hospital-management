<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #bdc3c7, #2c3e50);
    }
</style>

<div class="login-page" style="width: 70vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Update profile</h2>
        </div>
        <form class="login-form" action="/clinic/update-profile" method="post" enctype="multipart/form-data">
            <input type="text" name="doctorName" placeholder="Enter Doctor's Name" value={{clinic.doctorName}}
                required />
            <textarea name="description" placeholder="Short description about clinic" id="" cols="10" rows="5"
                required>{{clinic.description}}</textarea>
            <input type="text" name="place" placeholder="place" value={{clinic.place}} required />
            <input type="number" name="phone" placeholder="Phone No" value={{clinic.phone}} required />
            <input type="email" name="email" placeholder="Email Id" value={{clinic.email}} required />
            <label for="">Timings </label>
            <input type="time" name="openingTime" placeholder="Opening Time" value={{clinic.openingTime}} id=""
                required>
            <input type="time" name="closingTime" placeholder="Closing Time" value={{clinic.closingTime}} id=""
                required>
            <label for="">Upload clinic Image</label>
            <input type="file" accept="" name="image">

            <button type="submit" style="background: #00c3ff;">SUBMIT</button>
            <a href="/clinic" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>